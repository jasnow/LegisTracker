<div id="main" class="span-24 first last">
	<div id="bindex" class="span-20 push-2 prepend-top">
<% @bills.each do |bill| %>
  
  <h3><%= link_to "#{bill.number}", bill_path( bill ) %> <%= bill.short_title %></h3>
    <p><%= bill.title %></p>
    <p><strong>Current status: </strong><%= bill.b_status %> <span class="tstamp">(<%= bill.current_status_date %>)</span></p>
<hr>
  
<% end %>
</div>
</div>
