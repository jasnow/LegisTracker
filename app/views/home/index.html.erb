<div id="main" class="span-24 first last ">
	<div id="votes" class="span-5 push-1 first border prepend-top">
		<h2>Votes</h2>
		<ul>
		<% @votes.each do |vote| %>
			<li class="vote">
			  <% unless vote.bill.nil? %>
          <%= link_to "#{vote.bill.number}", bill_path( vote.bill ) %>
				<% end %> 
        <%= link_to "#{vote.description}", vote_path( vote.id ) %> &nbsp;
				<span class="tstamp">(<%= vote.date.strftime( '%l:%M %p' ) %>)</span><br/>
				<strong>Yea: <%= vote.yea %> Nay: <%= vote.nay %></strong>
			</li>
		<% end %>
		</ul>
	</div>

	<div id="status" class="span-11 push-2 prepend-top last">
		<h2>Bill Status Changes</h2>
		<ul>
				<% @hot_events.each do |hot| %>
				<li class="event">
			    <%= link_to "#{hot.bill.number}", bill_path( hot.bill ) %>
			    <%= hot.status_code.description %>
			    <span class="tstamp">(<%= hot.status_date.strftime('%Y-%m-%d') %>)</span><br />
			    <%= hot.bill.short_title %>
						(<%= hot.bill.primary_sponsor_name %>
						 <%= hot.bill.primary_sponsor_party %> -
						 <%= hot.bill.primary_sponsor_district %>)
				</li>
				<% end %>
			</li>
		</ul>
	</div>

	<div id="feeds" class="span-5 last"></div>
		<div id="feedbox" class="span-5 last">
			<div id="senate_rss">
				<h3>Senate Press Releases</h3>
				<ul>
				<% @senate_rss.each do |item| %>
					<li class="rss senate"><a href="<%= item.url %>"><%= item.title %></a><br />(<%= item.published_at %>)</li>
				<% end %>
				</ul>
			</div>

			<div id="house_rss">
				<h3>House Press Releases</h3>
				<ul>
				<% @house_rss.each do |item| %>
					<li class="rss house"><a class="rss house" href="<%= item.url %>"><%= item.title %></a><br />(<%= item.published_at %>)</li>
				<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>


