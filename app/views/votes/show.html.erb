<section id="votetitle" class="span-22 push-1 first last">
	<% if flash[:notice] %>
		<p class="flash notice span-21 first last"><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:error] %>
		<p class="flash error span-21 first last"><%= flash[:error] %></p>
	<% end %>

	<section id="key" class="first">
	<% if @vote.is_key? %>
		<%= link_to "Un-tag as key", unkey_vote_path( @vote ) %>
	<% else %>
		<%= link_to "Tag as key", key_vote_path( @vote ) %>
	<% end %>
	</section>
	
	<section id="keytitle" class="span-18 prepend-top">
		<h2><%= "#{@vote.legislation} #{@vote.description}" %></h2>
	<h4>Vote on <%= @vote.date.strftime( '%Y-%m-%d' ) %></h4>
	<p>
		<% if @bill %>
			<%= link_to "#{@bill.number}", bill_path( @bill ) %> <%= @bill.short_title %>
			<%= @bill.short_title %>
		<% end %>
		</p>
	</section>


</section>


	
<section id="votebox" class="span-10 push-6 first last">
	<ul>
		<li><strong>Yea:</strong> <%= @vote.yea %></li>
  		<li><strong>Nay:</strong> <%= @vote.nay%></li>
		<li><strong>Not Voting:</strong> <%= @vote.not_voting %></li>
		<li><strong>Excused:</strong> <%= @vote.excused %></li>
	</ul>
</section>



<section id="repub_votes" class="span-9 push-4 first">
	<h3>Republicans</h3>
	<strong>
		Yea: <%= @repub_votes.yea.count %> |
  	Nay: <%= @repub_votes.nay.count %>
	</strong>
	<ul>
		<% @repub_votes.each do |vote| %>
		<li>
			<%= link_to vote.display_name, member_path( vote.member ) %>
			( <%= vote.district_name %> )
			<strong><%= vote.vote_cast %></strong>
		</li>
		<% end %>
	</ul>
</section>

<section id="demo_votes" class="span-7 push-6 last">
	<h3>Democrats</h3>
	<strong>
		Yea: <%= @demo_votes.yea.count %> |
  	Nay: <%= @demo_votes.nay.count %>
	</strong>
	<ul>
		<% @demo_votes.each do |vote| %>
		<li>
			<%= link_to vote.display_name, member_path( vote.member ) %>
			( <%= vote.district_name %> )
			<strong><%= vote.vote_cast %></strong>
		</li>
		<% end %>
	</ul>
</section>
